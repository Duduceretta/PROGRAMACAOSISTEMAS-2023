# Definindo os registradores fictícios
R1 = 0
R2 = 0

# Função LOAD
def LOAD(registro, valor):
    if registro == 1:
        global R1
        R1 = valor
    elif registro == 2:
        global R2
        R2 = valor

# Função para realizar a soma
def somar():
    resultado = R1 + R2
    return resultado

# Pedindo ao usuário para digitar um número
numero1 = float(input("Digite o primeiro número: "))

# Chamando a função LOAD para carregar o valor no registrador R1
LOAD(1, numero1)

# Pedindo ao usuário para digitar o segundo número
numero2 = float(input("Digite o segundo número: "))

# Chamando a função LOAD para carregar o valor no registrador R2
LOAD(2, numero2)

# Chamando a função para somar os números
resultado = somar()

# Imprimindo o resultado
print(f"A soma é: {resultado}")
